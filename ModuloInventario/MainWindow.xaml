<Window x:Class="ModuloInventario.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModuloInventario"
        mc:Ignorable="d"
         Title="Cardocoffee" Height="319" Width="300" FontSize="14" Background="#F1C40F">
    <Grid>
        <Border Background="#273746" CornerRadius="20" Margin="20">
            <StackPanel Margin="20">
                <Label Content="Acceso Principal" FontSize="20" HorizontalAlignment="Center" Foreground="White" />
                <Separator></Separator>
                <Label Content="Usuario" Foreground="White"/>
                <TextBox Name="txtuser" Background="#566573" Foreground="White" FontSize="18"/>
                <Label Content="Clave" Foreground="White"/>
                <TextBox Name="txtpwd" Background="#566573" Foreground="White" FontSize="18"/>
                <Button Name="btningresar" Content="Ingresar" Margin="50 10" Background="#566573" Foreground="White" FontSize="18"/>
            </StackPanel>

        </Border>

    </Grid>
    
</Window>
